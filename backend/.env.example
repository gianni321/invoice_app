# Server Configuration
PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=replace_this_with_a_secure_random_string_at_least_32_chars_long_for_production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Database
DB_PATH=timetracker.db

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
MAIL_FROM="Integrally Invoices <no-reply@integrally.one>"

# Admin Notifications
ADMIN_NOTIFY_EMAILS=owner@yourco.com,rachael@yourco.com

# Application URLs
APP_BASE_URL=https://app.integrally.one

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=5

# Session Configuration
SESSION_SECRET=replace_this_with_another_secure_random_string_for_sessions

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_NOTIFICATIONS=true
TIMEZONE=America/Denver