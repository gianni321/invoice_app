FROM node:20-bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    tini python3 build-essential mariadb-client \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY package*.json ./
RUN npm ci --include=dev && npm i -g nodemon

COPY . .

ENV NODE_ENV=development
ENV PORT=3001
ENV HOST=0.0.0.0

EXPOSE 3001 9229

ENTRYPOINT ["/usr/bin/tini","--"]
CMD ["nodemon","--inspect=0.0.0.0:9229","--watch",".","--ext","js,json","server.js"]