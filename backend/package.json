{
  "name": "invoice-app-backend",
  "version": "1.0.0",
  "description": "Backend for time tracking and invoice management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "lib/**/*.js",
      "!lib/logger.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "nodemailer": "^7.0.7",
    "react-toastify": "^11.0.5",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
