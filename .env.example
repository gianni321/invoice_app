# Invoice App Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# SECURITY CONFIGURATION
# ======================

# JWT Secrets (REQUIRED - minimum 32 characters each)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters

# ======================
# DATABASE CONFIGURATION
# ======================

# Database type: sqlite, mysql, postgres
DB_TYPE=mysql

# MySQL/PostgreSQL settings
DB_HOST=database
DB_PORT=3306
DB_NAME=invoiceapp
DB_USER=invoiceapp
DB_PASSWORD=change-this-secure-database-password

# SQLite settings (if using SQLite)
DB_PATH=./data/timetracker.db

# Database root password (for Docker setup)
DB_ROOT_PASSWORD=change-this-root-password

# ======================
# REDIS CONFIGURATION
# ======================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# APPLICATION SETTINGS
# ======================

# Server configuration
NODE_ENV=production
API_PORT=3001
HTTP_PORT=80
HTTPS_PORT=443

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ======================
# AUTHENTICATION SETTINGS
# ======================

# Login security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
BCRYPT_ROUNDS=12

# Token expiry
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ======================
# RATE LIMITING
# ======================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# EMAIL CONFIGURATION (Optional)
# ======================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourdomain.com

# ======================
# FEATURE FLAGS
# ======================

ENABLE_ANALYTICS=true
ENABLE_BATCH_IMPORT=true
ENABLE_NOTIFICATIONS=true

# ======================
# LOGGING CONFIGURATION
# ======================

LOG_LEVEL=info

# ======================
# DEPLOYMENT SETTINGS
# ======================

# Skip certain startup checks (for development)
SKIP_DB_WAIT=false
SKIP_MIGRATIONS=false
RUN_SEEDS=false

# Health check settings
HEALTH_CHECK_HOST=localhost
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=5000

# ======================
# SSL CONFIGURATION (Production)
# ======================

# SSL certificate paths (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ======================
# MONITORING (Optional)
# ======================

# Error reporting
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Analytics
GOOGLE_ANALYTICS_ID=

# ======================
# BACKUP CONFIGURATION (Optional)
# ======================

# S3 backup settings
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
BACKUP_BUCKET=

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *